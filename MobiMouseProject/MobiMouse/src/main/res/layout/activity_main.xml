<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_btn"
        android:id="@+id/connect_btn"
        android:onClick="connectServer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/fakeView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_click_btn"
        android:id="@+id/left_click_btn"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/right_click_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_click_btn"
        android:id="@+id/right_click_btn"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnect_btn"
        android:id="@+id/disconnect_btn"
        android:onClick="disconnectClient"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_alignRight="@+id/right_click_btn" />
</RelativeLayout>
